<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/lightYellow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TeacherActivity">
    <android.support.design.widget.BottomNavigationView
            android:id="@+id/TeacherActNavView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/about_menu"/>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="50sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_height="678dp"
                      tools:layout_editor_absoluteX="-10dp"
                      app:layout_constraintTop_toBottomOf="@+id/TeacherActNavView">
            <Button
                    android:id="@+id/attendanceButton"
                    android:gravity="center"
                    android:layout_margin="40dp"
                    android:text="@string/attendanceButton"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:background="@drawable/ring"/>
            <Button
                    android:id="@+id/registrationButton"
                    android:gravity="center"
                    android:layout_margin="40dp"
                    android:text="@string/registerStudentTtl"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:background="@drawable/ring"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>