<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightYellow"
        tools:context=".CourseSelectionDBActivity">

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/CourseDBNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/back_menu"/>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="50sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:id="@+id/mainLinearLayout"
                android:layout_marginBottom="8dp">
            <!--Professor-->
            <LinearLayout
                    android:id="@+id/ProfessorFirstLinear"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="11dp"
                    android:layout_marginTop="30dp">
                <TextView
                        android:id="@+id/profFirstNameTxt"
                        android:text="@string/ProfFistName"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:id="@+id/profFirstNameInput"
                        android:hint="@string/ProfFistName"
                        android:inputType="text"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:padding="5dp"
                        android:background="@drawable/roundededittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ProfessorLastLinear"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="11dp"
                    android:layout_marginTop="8dp">

                <TextView
                        android:id="@+id/profLastNameTxt"
                        android:text="@string/ProfLastName"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:id="@+id/profLastNameInput"
                        android:hint="@string/ProfLastName"
                        android:inputType="text"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:padding="5dp"
                        android:background="@drawable/roundededittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <!--Class Time's-->
            <LinearLayout
                    android:id="@+id/classTimeLinear"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="11dp"
                    android:layout_marginTop="8dp">
                <LinearLayout
                        android:id="@+id/startTimeVertical"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="11dp"
                        android:layout_marginTop="8dp">
                    <TextView
                            android:id="@+id/startTimeTxt"
                            android:text="@string/startTime"
                            android:textSize="18sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                    <EditText
                            android:id="@+id/startTimeInput"
                            android:hint="@string/startTime"
                            android:inputType="time"
                            android:layout_margin="10dp"
                            android:textSize="20sp"
                            android:padding="5dp"
                            android:background="@drawable/roundededittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/endTimeVertical"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="11dp"
                        android:layout_marginTop="8dp">

                    <TextView
                            android:id="@+id/endTimeTxt"
                            android:text="@string/endTime"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <EditText
                            android:id="@+id/endTimeInput"
                            android:hint="@string/endTime"
                            android:inputType="time"
                            android:layout_margin="10dp"
                            android:textSize="20sp"
                            android:padding="5dp"
                            android:background="@drawable/roundededittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <!--Class Dates-->
            <LinearLayout
                    android:id="@+id/classDateLinear"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="11dp"
                    android:layout_marginTop="8dp">
                <LinearLayout
                        android:id="@+id/startDateVertical"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="11dp"
                        android:layout_marginTop="8dp">
                    <TextView
                            android:id="@+id/startDateTxt"
                            android:text="@string/startDate"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                    <LinearLayout
                            android:id="@+id/startDateHorizontal"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">

                        <EditText
                                android:id="@+id/startDateInput"
                                android:hint="@string/startDate"
                                android:inputType="date"
                                android:layout_margin="10dp"
                                android:textSize="20sp"
                                android:padding="5dp"
                                android:background="@drawable/roundededittext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/endDateVertical"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="11dp"
                        android:layout_marginTop="8dp">
                    <TextView
                            android:id="@+id/endDateTxt"
                            android:text="@string/endDate"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                    <LinearLayout
                            android:id="@+id/endDateHorizontal"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">

                        <EditText
                                android:id="@+id/endDateInput"
                                android:hint="@string/endDate"
                                android:inputType="date"
                                android:layout_margin="10dp"
                                android:textSize="20sp"
                                android:padding="5dp"
                                android:background="@drawable/roundededittext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--building name and number-->
            <LinearLayout
                    android:id="@+id/buildingLinear"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="11dp"
                    android:layout_marginTop="8dp">
                <LinearLayout
                        android:id="@+id/buildingNameLinear"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="11dp"
                        android:layout_marginTop="8dp">
                    <TextView
                            android:id="@+id/buildingTxt"
                            android:text="@string/Building_Name"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                    <EditText
                            android:id="@+id/buildingInput"
                            android:hint="@string/Building_Name"
                            android:inputType="text"
                            android:layout_margin="10dp"
                            android:textSize="20sp"
                            android:padding="5dp"
                            android:background="@drawable/roundededittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/buildingNumLinear"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                    <TextView
                            android:id="@+id/roomTxt"
                            android:text="@string/Building_Number"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                    <EditText
                            android:id="@+id/roomInput"
                            android:hint="@string/Building_Number"
                            android:inputType="number"
                            android:layout_margin="10dp"
                            android:textSize="20sp"
                            android:padding="5dp"
                            android:background="@drawable/roundededittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <!--course number and days of the week-->
            <LinearLayout
                    android:id="@+id/courseIdDoWLinear"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="11dp"
                    android:layout_marginTop="8dp">
                <LinearLayout
                        android:id="@+id/courseIdLinear"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="117dp"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="11dp"
                        android:layout_marginTop="8dp">
                    <TextView
                            android:id="@+id/courseIdTxt"
                            android:text="@string/courseId"
                            android:textSize="18sp"
                            android:layout_width="139dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                    <EditText
                            android:id="@+id/courseIdInput"
                            android:hint="@string/courseId"
                            android:inputType="number"
                            android:layout_margin="10dp"
                            android:textSize="20sp"
                            android:padding="5dp"
                            android:background="@drawable/roundededittext"
                            android:layout_width="139dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/DayOfWeekLinear"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

            <TextView
                    android:id="@+id/daysOfWeekTxt"
                    android:text="@string/daysOfWeek"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <LinearLayout
                    android:id="@+id/DayOfWeekLinearCheck"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                <CheckBox
                        android:text="M"
                        android:layout_width="250dp"
                        android:layout_height="44dp"
                        android:id="@+id/Monday"
                        android:layout_weight="1"/>
                <CheckBox
                        android:text="T"
                        android:layout_width="250dp"
                        android:layout_height="44dp"
                        android:id="@+id/Tuesday"
                        android:layout_weight="1"/>
                <CheckBox
                        android:text="W"
                        android:layout_width="250dp"
                        android:layout_height="44dp"
                        android:id="@+id/Wednesday"
                        android:layout_weight="1"/>
                <CheckBox
                        android:text="R"
                        android:layout_width="250dp"
                        android:layout_height="44dp"
                        android:id="@+id/Thursday"
                        android:layout_weight="1"/>
                <CheckBox
                        android:text="F"
                        android:layout_width="250dp"
                        android:layout_height="44dp"
                        android:id="@+id/Friday"
                        android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
            <!--android:enabled="false" makes sure the button isn't clickable -->
            <Button
                    android:id="@+id/commitClassroomDB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="48dp"
                    android:layout_marginEnd="48dp"
                    android:layout_marginBottom="56dp"
                    android:text="@string/commit"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="10dp"
                    android:background="@drawable/ring"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.231"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>